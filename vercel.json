{
  "version": 2,
  "builds": [
    {
      "src": "server/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    }
  ],
  "routes": [
    // {
    //   "src": "/api/(.*)",
    //   "dest": "server/dist/index.js"
    // },
    // {
    //   "src": "/(.*)",
    //   "dest": "client/build/$1"
    // }
    {
      "src": "/(.*)",
      "dest": "server/dist/index.js"
    }
  ],
  "buildCommand": "npm install --prefix server && npm run build --prefix server && npm install --prefix client && npm run build --prefix client"
}